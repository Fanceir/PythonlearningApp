// prisma/schema.prisma

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  username         String   @unique
  hashed_password  String
  codes            CodeSnippet[]
}

model CodeSnippet {
  id       Int      @id @default(autoincrement())
  content  String
  result   String?
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
}
